package com.sythiex.outerplanes;

import cpw.mods.fml.common.Mod;
import cpw.mods.fml.common.Mod.EventHandler;
import cpw.mods.fml.common.event.FMLInitializationEvent;
import cpw.mods.fml.common.event.FMLPreInitializationEvent;
import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;
import net.minecraftforge.common.DimensionManager;
import net.minecraftforge.common.config.ConfigCategory;
import net.minecraftforge.common.config.Configuration;
import net.minecraftforge.common.config.Property;

@Mod(modid = OuterPlanes.MODID, version = OuterPlanes.VERSION)
public class OuterPlanes
{
	public static final String MODID = "outerplanes";
    public static final String VERSION = "0.1.0";
    
    public static int dimIDElysium;
    
    public static Block portalElysium;
    
    @EventHandler
    public void preInit(FMLPreInitializationEvent event)
    {
    	Configuration config = new Configuration(event.getSuggestedConfigurationFile());
    	config.load();
    	
    	ConfigCategory dimensionIDs = new ConfigCategory("Dimension IDs");
    	dimIDElysium = config.get("Dimension IDs", "Elysium ID", 5).getInt();
    	
    	config.save();
    }
    
    @EventHandler
    public void init(FMLInitializationEvent event)
    {
    	DimensionManager.registerProviderType(dimIDElysium, WorldProviderElysium.class, false);
    	DimensionManager.registerDimension(dimIDElysium, dimIDElysium);
    	
    	registerBlocks();
    }
    
    public void registerBlocks()
    {
    	portalElysium = new PortalOP();
    	GameRegistry.registerBlock(portalElysium, "portalElysium");
    }
}